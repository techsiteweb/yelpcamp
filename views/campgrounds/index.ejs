<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h2>Welcome to Yelp Camp!</h2>
            <p>View our handpicked campgrounds from around the world</p>
            <p>
               <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a>
            </p>
        </div>
    </header>
    <!--Here we are going to add a grid system to have the pics in it-->
    <div class="row text-center"style="display:flex; flex-wrap: wrap"   >
        <% campGroundsVar.forEach(function(camp){ %>
        <div class="col-md-3 col-sm-6">
            <div  class="thumbnail">
               <img src="<%= camp.image %>" style="width:100%">
               <div class="caption">
                   <h4><%= camp.name %></h4>
               </div>
               <div>
                <p>
                    <a class="btn btn-primary btn-sm" href="/campgrounds/<%= camp._id %>">More info</a>
                </p> 
               </div>
            </div>
        </div>
        <% }); %>
    </div>
</div> <!--Container ends here--> 
<% include ../partials/footer %>