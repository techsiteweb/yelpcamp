<% include ../partials/header %>
<div class="container">
    <div class="row"> <!--Here we add the grid system with "row" class-->
        <div class="form">
            <div class="form-header">
                <h3 class="header-text">New Campground</h3>
            </div>
            <div id="content" class="form-fields">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" name="newcamp" type="text" placeholder="Camp Name*">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="newcampimage" type="text" placeholder="Image URL*">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="price" type="number" placeholder="Price*" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="description" type="text" placeholder="Description*">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit !</button>
                    </div>
                </form>
            <div>
                <a href="/campgrounds">Go Back</a>
            </div>
            </div>
        </div>
    </div>
</div> <!--Container ends here-->
<% include ../partials/footer %>
